@require './_normalize'
@require './_reset'
@require './font'
@require './config'
@require './nprogress'
@require './code'
@require './custom-blocks'
@require './mobile.styl'

html, body
  padding 0
  margin 0

body
  font-family $notoFont
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-size 16px
  color $textColor
@media only screen and (-webkit-min-device-pixel-ratio: 2),(min-resolution: 2dppx)
  body
    -webkit-font-smoothing: antialiased
    -moz-osx-font-smoothing: grayscale

.dg
  display none
